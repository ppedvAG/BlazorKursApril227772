@page "/monate"
<h3>Monatsliste</h3>
<div class="container">
    <div class="row">
        <div class="col"><h2>@Monat</h2></div>
        <div class="col">
            <ul class="list-group">
                <li class="list-group-item active"> bitte wählen</li>
                @for (int i = 0; i < 12; i++)
                {
                    var ii = i;
                    <li class="list-group-item list-group-item-action" 
                           @onclick="()=>select(ii)">
                        @DateTime.Now.AddMonths(i).ToString("MMMM")
                    </li>
                }

            </ul>

        </div>
    </div>
</div>


@code {
    string Monat;
    void select(int i)
    {
        Monat = @DateTime.Now.AddMonths(i).ToString("MMMM");
    }
}
