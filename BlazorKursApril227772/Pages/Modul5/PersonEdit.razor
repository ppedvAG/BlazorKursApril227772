            <InputNumber class="form-control" @bind-Value="_person.Gross"></InputNumber>
            <ValidationMessage For="()=>_person.Gross"></ValidationMessage>
        </div>
    </div>
    <div class="mb-3 row">
        <label for="inputPassword" class="col-sm-2 col-form-label">GebDatum</label>
        <div class="col-sm-10">

            <InputDate class="form-control" @bind-Value="_person.GebDat"></InputDate>
            <ValidationMessage For="()=>_person.GebDat"></ValidationMessage>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">save</button>
    <ValidationSummary></ValidationSummary>
</EditForm>

